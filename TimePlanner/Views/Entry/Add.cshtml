@model TimePlanner.Models.Entry

    <form asp-action="Add" asp-controller="Entry">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <select asp-for="Type" class="form-control" onchange="selectValueChanged()" id="select">
                <option value="Встреча">Встреча</option>
                <option value="Дело">Дело</option>
                <option value="Памятка">Памятка</option>
            </select>
            <span asp-validation-for="Type"></span>
        </div>
        <div class="form-group">
            <label asp-for="Theme" class="control-label"></label>
            <input type="text" asp-for="Theme" class="form-control" />
            <span asp-validation-for="Theme"></span>
        </div>
        <div class="form-group" >
            <label asp-for="StartTime" class="control-label"></label>
            <input type="date" asp-for="StartTime" class="form-control" />
            <input type="time" name="time" asp-for="StartTime" class="form-control"/>
            <span asp-validation-for="StartTime"></span>
        </div>
        <div class="form-group">
            <label asp-for="EndTime" class="control-label"></label>
            <input type="date" asp-for="EndTime" class="form-control" id="dateEnd"/>
            <input type="time" name="time" asp-for="EndTime" class="form-control" id="timeEnd"/>
            <span asp-validation-for="EndTime" id="endTimeValidation"></span>
        </div>
        <div class="form-group">
            <label asp-for="Place" class="control-label"></label>
            <input type="text" asp-for="Place" class="form-control" id="place"/>
            <span asp-validation-for="Place" id="placeValidation"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-default" />
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-default">Отмена</a>
        </div>
    </form>

@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}